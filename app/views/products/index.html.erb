<h1>Products</h1>
<%= link_to 'New Product', new_product_path, class: 'btn btn-primary'%>
<table>
  <thead>
    <tr>
      <th>SKU</th>
      <th>Name</th>
      <th>Updated At</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr id=<%= "product--#{product.id}" %>>
        <td id=<%= "product--#{product.id}_sku" %>><%= product.sku %></td>
        <td id=<%= "product--#{product.id}_name" %> ><%= product.name %></td>
        <td><%= product.updated_at.strftime('%m-%d-%Y') %></td>
        <td id="product--<%= product.id %>_actions">
          <%= link_to "show", product_path(product) %>
          <%= link_to "edit", edit_product_path(product) %>
          <%= link_to "delete",
                      product_path(product),
                      class: "delete",
                      method: :delete,
                      data: {
                        confirm: "Are you sure you want to delete this product?"
                      } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
