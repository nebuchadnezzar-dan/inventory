<h1>WELCOME TO Warehouse</h1>

<div class="container">
  <dl class="row">
    <dt class="col-sm-2">Street</dt>
    <dd class="col-sm-10"><%= @warehouse.street %></dd>

    <dt class="col-sm-2">City</dt>
    <dd class="col-sm-10"><%= @warehouse.city %></dd>

    <dt class="col-sm-2">Province</dt>
    <dd class="col-sm-10"><%= @warehouse.province %></dd>
  </dl>
  
  <div class="row">
    <div class="col-lg-8 offset-lg-2">
      <div class="input-group mb-3">
        <input type="text" class="form-control" placeholder="Search products" label="Search products" describedby="button-addon2">
        <div class="input-group-append">
          <button class="btn btn-primary" type="button" id="button-addon2">Search!</button>
        </div>
      </div>      
    </div>
  </div>

  <div class="row">
    <table class="table table-sm table-light text-center table-striped table-borderless">
      <thead class="text-white">
        <tr class="bg-primary">
          <th>Product</th>
          <th>Quantity</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.name %> </td>
            <td><%= @warehouse.inventory_count(product) %> </td>
            <td>
              <div class="row">
                <div class="col-lg-8 offset-lg-2">
                  <%= render 'stocks/form', stock: @stock, warehouse: @warehouse, product: product.id%> 
                </div>
              </div>
            </td>
          </tr>
        <%end%>
      </tbody>
    </table>
  </div>  

  <div class="row">
    <%= link_to 'Back', warehouses_path, class: 'btn btn-primary' %>
  </div>
</div>

