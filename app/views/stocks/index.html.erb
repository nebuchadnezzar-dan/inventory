<h1>Stocks</h1>

<div class="container">
  <div class="row">
    <table class="table table-striped text-center">
      <thead class="thead-dark">
        <tr>
          <th scope="col">#</th>
          <th scope="col">Product</th>
          <th scope="col">Warehouse</th>
          <th scope="col">Count</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        <% @stocks.each do |stock| %>
          <tr>
            <th scope="row"><%= stock.id %></th>
            <td><%= stock.product.name %></td>
            <td><%= stock.warehouse.full_address %></td>
            <td><%= stock.count %></td>
            <td>
              <%= link_to '&#128065;'.html_safe, stock_path(stock), class: 'btn btn-success' %>
              <%= link_to '&#9998;'.html_safe, edit_stock_path(stock), class: 'btn btn-primary' %>
              <%= link_to '&#128465;'.html_safe, stock_path(stock), 
                                        method: :delete, 
                                        data: { confirm: 'Are you sure?' }, 
                                        class: 'btn btn-danger' %>
            </td>
          </tr>

        <% end %>
      </tbody>
    </table>  
  </div>

  <div class="row">
    <%= link_to 'New Stock', new_stock_path, class: 'btn btn-primary' %>
  </div>
</div>