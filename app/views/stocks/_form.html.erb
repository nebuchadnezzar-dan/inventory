  <%= form_with model: stock, remote: false do |f| %>

    <div class="form-group">
      <%= f.label :product %>
      <%= f.select :product_id, 
                    @products.map { |p| [p.name, p.id] },
                    {},
                    { class: 'form-control' } %>
    </div>

    <div class="form-group">
      <%= f.label :warehouse %>
      <%= f.select :warehouse_id, 
                    @warehouses.map { |w| [w.full_address, w.id] },
                    {},
                    { class: 'form-control' } %>
    </div>

    <div class="form-group">
      <%= f.label :count %>
      <%= f.number_field :count, class: 'form-control' %>
    </div>

    <%= f.submit 'Save Stock', class: 'btn btn-success' %>
    <%= link_to 'Back', stocks_path, class: 'btn btn-primary' %>
  <% end %>