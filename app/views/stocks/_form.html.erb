<%= form_with model: stock, local: true, id: "stock_form--#{product}", class: "form-inline", url: warehouse_stocks_path(warehouse) do |f| %>
  <div class="form-group">
    <%= f.hidden_field :product_id, value: product, class: "form-control", id: "stock_product_id--#{product}" %>
  </div>              
  
  <div class="form-group">
    <%= f.number_field :count, class: "form-control form-control-sm", id: "stock_count--#{product}" %>
    <%= render_error(stock, :count) %>
  </div>
  <%= f.submit "+", class: "btn btn-success btn-sm", id: "stock_submit--#{product}" %>
<% end %>    