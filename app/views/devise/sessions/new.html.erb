<style>
  .bd-placeholder-img {
    font-size: 1.125rem;
    text-anchor: middle;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
  }

  @media (min-width: 768px) {
    .bd-placeholder-img-lg {
      font-size: 3.5rem;
    }
  }
</style>
<div class="row">
  <div class="col-md-4 offset-md-4 login">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-signin' }) do |f| %>

      <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
        <%= f.label :email, class: 'sr-only' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'Email Address' %>

        <%= f.label :password, class: 'sr-only' %>
        <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', placeholder: 'Password' %>


      <% if devise_mapping.rememberable? %>
        <div class="checkbox mb-3">
          <label>
            <%= f.check_box :remember_me %> Remember me
          </label>
        </div>
      <% end %>
      <div class="actions">
        <%= f.submit "Log in", class: 'btn btn-lg btn-primary btn-block' %>
      </div>
      <%= render "devise/shared/links" %> 
    <% end %>
  </div>
</div>
